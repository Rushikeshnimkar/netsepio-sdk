{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true ,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
    },
    "include": [
        "src",
        "package.json",
        "__tests__/**/*",
    ],
    "exclude": ["node_modules"]
}